<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="218dp"
        tools:layout_editor_absoluteY="59dp">

        <TextView
            android:id="@+id/nom_appli"
            android:layout_width="match_parent"
            android:layout_height="203dp"
            android:layout_weight="10"
            android:fontFamily="@font/aclonica"
            android:paddingLeft="90pt"
            android:paddingTop="35pt"
            android:paddingRight="60pt"
            android:paddingBottom="20pt"
            android:text="SavWar"
            android:textSize="36sp" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="0.2"
            app:srcCompat="@drawable/logo_non_officiel" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="300"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_savoir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20pt"
                android:layout_marginTop="50pt"
                android:layout_marginRight="20pt"
                android:text="Savoir du jour " />

            <Button
                android:id="@+id/button_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20pt"
                android:layout_marginTop="50pt"
                android:layout_marginRight="20pt"
                android:text="ThÃ¨mes de savoir" />

            <Button
                android:id="@+id/button_favoris"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20pt"
                android:layout_marginTop="50pt"
                android:layout_marginRight="20pt"
                android:text="Favoris " />

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>