<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="218dp"
        tools:layout_editor_absoluteY="59dp"
        android:background="@color/backgroundColor">

        <TextView
            android:id="@+id/nom_appli"
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:text="SavWar"
            android:textSize="36sp" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="0.4"
            app:srcCompat="@drawable/logoblack" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_savoir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/button_background"
                android:text="Savoir du jour " />

            <Button
                android:id="@+id/button_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/button_background"
                android:text="ThÃ¨mes de savoir" />

            <Button
                android:id="@+id/button_favoris"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/button_background"
                android:text="Favoris " />

            <Button
                android:id="@+id/button_ajouter"
                android:layout_width="101dp"
                android:layout_height="65dp"
                android:layout_marginLeft="228dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/button_background"
                android:text="Ajouter un savoir" />

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>