<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SavoirDuJour"
    android:orientation="vertical"
    android:background="@color/backgroundColor2">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home"
            android:layout_width="214dp"
            android:layout_height="89dp"
            android:layout_weight="0.1"

            app:srcCompat="?attr/homeAsUpIndicator" />

        <ImageView
        android:id="@+id/image_savoir"
        android:layout_width="match_parent"
        android:layout_height="220dp"
            android:layout_marginRight="89dp"
        android:layout_gravity="center"
        android:layout_weight="0.05"

        app:srcCompat="@drawable/savwarlogo" />
    </LinearLayout>
    <TextView
        android:id="@+id/info_savoir"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:fontFamily="@font/aclonica"
        android:gravity="center_vertical"
        android:lineSpacingExtra="12sp"
        android:paddingLeft="60dp"
        android:paddingTop="20dp"
        android:paddingRight="60dp"
        android:paddingBottom="20dp"
        android:text=""
        android:textColor="@color/primaryTextColor"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.75"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/en_savoir_plus"
            android:layout_width="119dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:linksClickable="true"
            android:paddingLeft="30dp"
            android:text=""
            android:textColor="@color/primaryTextColor"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/icon_fav"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.6"
            app:srcCompat="@drawable/round_favorite_border_white_36" />


    </LinearLayout>
    </LinearLayout>